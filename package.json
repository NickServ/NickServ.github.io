{
  "private": true,
  "dependencies": {
    "@octokit/rest": "^14.0.9",
    "dotenv": "^5.0.0",
    "gatsby": "^1.9.198",
    "gatsby-plugin-sass": "^1.0.17",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "jest": "^22.3.0",
    "prettier": "^1.10.2",
    "react-test-renderer": "^15.6.2"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{js,md,scss}\"",
    "format-check": " prettier --list-different \"**/*.{js,md,scss}\"",
    "install": "gatsby build",
    "start": "gatsby develop",
    "test": "npm run format-check && jest && npm install"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "moduleNameMapper": {
      "\\.scss$": "<rootDir>/__mocks__/empty.js"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/.cache/"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
